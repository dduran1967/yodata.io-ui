{
  "rules": {
    ".read": "true",
    "public": {
      "schema": {
        "$subject": {
          ".write": "!data.exists()"
        }
      }
    },
    "user": {
      "$uid": {
        "channel": {
          ".write": "auth === $uid"
        },
        "thrume": {
          ".write": "true"
        }
      }
    },
    "in": {
      "$uid": {
        ".write": "true"
      }
    }
  }
}